{
	"cSpell.dictionaries": [
		"markdown"
	],
	"cSpell.words": [
		"bootvar",
		"Contenttype",
		"cslint",
		"CSOM",
		"dpkg",
		"giscus",
		"lastmod",
		"MPLS",
		"NGAV",
		"NGFW",
		"Omnissa",
		"SIEM",
		"TAXII",
		"tftpboot",
		"Ubiquiti"
	],
	"cSpell.languageSettings": [
      {
          // use with Markdown files
          "languageId": "markdown",
          // Exclude code.
          "ignoreRegExpList": [
              "/^\\s*```[\\s\\S]*?^\\s*```/gm"
          ]
      }
  	],
	"todo-tree.tree.scanMode": "workspace only",
	"files.defaultLanguage": "markdown",
	// "[markdown]": {
	// 	"editor.fontSize": 14,
	// 	"editor.lineHeight": 26,
	// 	"editor.wordWrap": "wordWrapColumn",
	// 	"editor.wordWrapColumn": 64,
	// 	"editor.lineNumbers": "off",
	// 	"editor.quickSuggestions": false,
	// 	"editor.minimap.enabled": false
	// },
	"markdown.extension.preview.autoShowPreviewToSide": false,
	"cSpell.enabled": true,
	"cSpell.ignoreWords": [
		"azuremonitoragent",
		"frontmatter",
		"modifieddate",
		"omfwd",
		"Fastly"
	],    
	"markdownlint.config": {
        "MD033": {
            "allowed_elements": ["details", "summary"]
        },
        "MD028": false
    },
	"git.branchProtectionPrompt": "alwaysCommit"
}